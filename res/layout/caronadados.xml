<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#f7f6f6"
    android:fillViewport="true">
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/cadastrar_usuario"
	        android:id="@+id/text_cadastrar"
	        android:textColor="#000000"        
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="30dp"
	        android:layout_marginBottom="15dp"
	        />
	       	
	    <LinearLayout
	        android:id="@+id/fundo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="#ffffff"
	        android:paddingTop="40dp"
	        android:paddingRight="50dp"
	        android:paddingBottom="40dp"
	        android:layout_marginBottom="15dp"
	        android:orientation="vertical" >
	        
	        <ImageView 
	    		android:id="@+id/foto"
	   			android:layout_width="100dp"
	    		android:layout_height="100dp"
	    		android:layout_gravity="center_horizontal"
	   			android:src="@drawable/ic_no_image"
	    		android:contentDescription="@string/foto"/>
			
	        <TextView
			    android:id="@+id/tvNome"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/nome"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edNome"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"
	            android:inputType="text"
				android:hint="@string/nome"
				android:layout_marginBottom="10dp" />
	       
	        
	        <TextView
			    android:id="@+id/tvSexo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/sexo"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />	         
	        
	       <Spinner
	        android:id="@+id/spinSexo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/margem_editext"
	        android:textSize="@dimen/fontes_para_textos"            
	        android:entries="@array/sexo_arrays"
	        android:prompt="@string/sexo_prompt" 
	        android:background="#ebedea"	        	        	        
	        android:layout_marginBottom="10dp"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        
	        />
	        
	        <TextView
			    android:id="@+id/tvCpf"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/cpf"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edCpf"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"
	            android:inputType="number"
				android:hint="@string/cpf"
				android:layout_marginBottom="10dp" />
	        
	        
			<TextView
			    android:id="@+id/tvRegistroAcademico"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/registro_academico"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edRegistroAcademico"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"
	            android:inputType="number"
				android:hint="@string/registro_academico"
				android:layout_marginBottom="10dp" />             
	        
	       
	        <TextView
			    android:id="@+id/tvNomeCurso"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/nome_curso"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edNomeCurso"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"
	            android:inputType="text"
				android:hint="@string/nome_curso"
				android:layout_marginBottom="10dp" />
	        
	        
	        <TextView
			    android:id="@+id/tvTurno"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/turno"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edTurno"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"
	            android:inputType="text"
				android:hint="@string/turno"
				android:layout_marginBottom="10dp" />
			 
	        <TextView
			    android:id="@+id/tvCelular"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/celular"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	       <EditText
			    android:id="@+id/edCelular"
			    android:background="#ebeaea"
			    android:layout_width="180dp"
			    android:layout_height="@dimen/heigth_editext"
				android:layout_marginLeft="@dimen/margem_editext"
				android:padding="@dimen/padding"
				android:textSize="@dimen/fontes_para_textos"
				android:layout_marginBottom="10dp"
				android:inputType="phone"
				android:hint="@string/mask_telefone"/>   
			
	       
	        <TextView
			    android:id="@+id/tvContatoEmergencia"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/contato_emergencia"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	        
	        <EditText
			    android:id="@+id/edContatoEmergencia"
			    android:background="#ebeaea"
			    android:layout_width="180dp"
			    android:layout_height="@dimen/heigth_editext"
				android:layout_marginLeft="@dimen/margem_editext"
				android:padding="@dimen/padding"
				android:textSize="@dimen/fontes_para_textos"
				android:layout_marginBottom="10dp"
				android:inputType="phone"
				android:hint="@string/mask_telefone"/>
	       
			<TextView
			    android:id="@+id/tvEndereco"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/endereco"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
				
	       <EditText
			    android:id="@+id/edEndereco"
			    android:background="#ebeaea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
				android:layout_marginLeft="@dimen/margem_editext"
				android:padding="@dimen/padding"
				android:textSize="@dimen/fontes_para_textos"
				android:layout_marginBottom="10dp"
				android:inputType="textPostalAddress"
				android:hint="@string/endereco"/>
			
	       <TextView
			    android:id="@+id/tvNumero"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/numero"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	       <EditText
			    android:id="@+id/edNumero"
			    android:background="#ebeaea"
			    android:layout_width="180dp"
			    android:layout_height="@dimen/heigth_editext"
				android:layout_marginLeft="@dimen/margem_editext"
				android:padding="@dimen/padding"
				android:textSize="@dimen/fontes_para_textos"
				android:inputType="text|number"
				android:layout_marginBottom="10dp"
				android:hint="@string/numero"/>
	       
			<TextView
			    android:id="@+id/tvCep"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/cep"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	       <EditText
			    android:id="@+id/edCep"
			    android:background="#ebeaea"
			    android:layout_width="180dp"
			    android:layout_height="@dimen/heigth_editext"
				android:layout_marginLeft="@dimen/margem_editext"
				android:padding="@dimen/padding"
				android:textSize="@dimen/fontes_para_textos"
				android:layout_marginBottom="10dp"
				android:inputType="number"
				android:hint="@string/mask_cep"/>		       	       	       			       
	     
	       
	       
	       
	       <TextView
			    android:id="@+id/tvLogin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/login"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	       <EditText
			    android:id="@+id/edLogin"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"	            
				android:hint="@string/login"
				android:inputType="textWebEmailAddress"
				android:layout_marginBottom="10dp" />		       
	       
	       
	       <TextView
			    android:id="@+id/tvSenha"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:text="@string/senha"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginBottom="10dp" />
	       <EditText
			    android:id="@+id/edSenha"
			    android:background="#ebedea"
			    android:layout_width="370dp"
			    android:layout_height="@dimen/heigth_editext"
	            android:textSize="@dimen/fontes_para_textos"
	            android:layout_marginLeft="@dimen/margem_editext"
	            android:padding="@dimen/padding"	            
				android:hint="@string/senha"
				android:inputType="textPassword"
				android:layout_marginBottom="10dp" />	
	         	     		   
	       
		</LinearLayout> 
		
	    
                  
	</LinearLayout>
</ScrollView>    